<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd"
      no-conversation-view-id="/protected/VinculoList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{vinculoHome.wire}"/>

   <param name="vinculoFrom"/>
   <param name="vinculoIdVinculo" value="#{vinculoHome.vinculoIdVinculo}"/>


   <navigation from-action="#{vinculoHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/protected/Vinculo.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{vinculoHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/protected/Vinculo.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{vinculoHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/protected/VinculoList.xhtml"/>
      </rule>
   </navigation>

</page>
