<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd"
      no-conversation-view-id="/protected/ConvenioList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{convenioHome.wire}"/>

   <param name="convenioFrom"/>
   <param name="convenioIdConvenio" value="#{convenioHome.convenioIdConvenio}"/>


   <navigation from-action="#{convenioHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/protected/Convenio.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{convenioHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/protected/Convenio.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{convenioHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/protected/ConvenioList.xhtml"/>
      </rule>
   </navigation>

</page>
