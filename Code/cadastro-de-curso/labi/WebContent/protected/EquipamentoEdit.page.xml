<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd"
      no-conversation-view-id="/protected/EquipamentoList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{equipamentoHome.wire}"/>
   <action execute="#{equipamentoHome.carregarDados}"/>

   <param name="equipamentoFrom"/>
   <param name="equipamentoIdEquipamento" value="#{equipamentoHome.equipamentoIdEquipamento}"/>
   <param name="modeloEquipamentoFrom"/>
   <param name="modeloEquipamentoIdModeloEquipamento" value="#{modeloEquipamentoHome.modeloEquipamentoIdModeloEquipamento}"/>
   <param name="marcaEquipamentoFrom"/>
   <param name="marcaEquipamentoIdMarcaEquipamento" value="#{marcaEquipamentoHome.marcaEquipamentoIdMarcaEquipamento}"/>


   <param name="tipoEquipamentoFrom"/>
   <param name="tipoEquipamentoIdTipoEquipamento" value="#{tipoEquipamentoHome.tipoEquipamentoIdTipoEquipamento}"/>



   <navigation from-action="#{equipamentoHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/protected/Equipamento.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{equipamentoHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/protected/Equipamento.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{equipamentoHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/protected/EquipamentoList.xhtml"/>
      </rule>
   </navigation>

</page>
