<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd"
      no-conversation-view-id="/protected/ProfissionalList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{profissionalHome.wire}"/>
   <action execute="#{profissionalHome.carregarCidade}" if="#{profissionalHome.cidadeAux == null}"/>

   <param name="profissionalFrom"/>
   <param name="profissionalIdProfissional" value="#{profissionalHome.profissionalIdProfissional}"/>
   <param name="vinculoFrom"/>
   <param name="vinculoIdVinculo" value="#{vinculoHome.vinculoIdVinculo}"/>

   <param name="cidadeFrom"/>
   <param name="cidadeIdCidade" value="#{cidadeHome.cidadeIdCidade}"/>
   <param name="paisFrom"/>
   <param name="paisIdPais" value="#{paisHome.paisIdPais}"/>




   <navigation from-action="#{profissionalHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/protected/Profissional.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{profissionalHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/protected/Profissional.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{profissionalHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/protected/ProfissionalList.xhtml"/>
      </rule>
   </navigation>

</page>
