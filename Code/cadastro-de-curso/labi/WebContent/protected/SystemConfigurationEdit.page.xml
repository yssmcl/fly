<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd"
      no-conversation-view-id="/protected/SystemConfigurationList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{systemConfigurationHome.wire}"/>

   <param name="systemConfigurationFrom"/>
   <param name="systemConfigurationIdSystemConfiguration" value="#{systemConfigurationHome.systemConfigurationIdSystemConfiguration}"/>


   <navigation from-action="#{systemConfigurationHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/protected/SystemConfiguration.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{systemConfigurationHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/protected/SystemConfiguration.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{systemConfigurationHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/protected/SystemConfigurationList.xhtml"/>
      </rule>
   </navigation>

</page>
