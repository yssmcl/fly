<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd"
      no-conversation-view-id="/protected/InstituicaoList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{instituicaoHome.wire}"/>
   <action execute="#{instituicaoHome.carregarCidade}" if="#{instituicaoHome.cidadeAux == null}"/>

   <param name="instituicaoFrom"/>
   <param name="instituicaoIdInstituicao" value="#{instituicaoHome.instituicaoIdInstituicao}"/>
   <param name="cidadeFrom"/>
   <param name="cidadeIdCidade" value="#{cidadeHome.cidadeIdCidade}"/>
   <param name="paisFrom"/>
   <param name="paisIdPais" value="#{paisHome.paisIdPais}"/>




   <navigation from-action="#{instituicaoHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/protected/Instituicao.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{instituicaoHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/protected/Instituicao.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{instituicaoHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/protected/InstituicaoList.xhtml"/>
      </rule>
   </navigation>

</page>
