<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd"
      no-conversation-view-id="/protected/CidadeList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{cidadeHome.wire}"/>

   <param name="cidadeFrom"/>
   <param name="cidadeIdCidade" value="#{cidadeHome.cidadeIdCidade}"/>
   <param name="paisFrom"/>
   <param name="paisIdPais" value="#{paisHome.paisIdPais}"/>



   <navigation from-action="#{cidadeHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/protected/Cidade.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{cidadeHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/protected/Cidade.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{cidadeHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/protected/CidadeList.xhtml"/>
      </rule>
   </navigation>

</page>
