<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd"
      no-conversation-view-id="/protected/PacienteList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{pacienteHome.wire}"/>
    <action execute="#{pacienteHome.carregarCidade}" if="#{pacienteHome.cidadeAux == null}"/>

   <param name="pacienteFrom"/>
   <param name="pacienteIdPaciente" value="#{pacienteHome.pacienteIdPaciente}"/>
   <param name="cidadeFrom"/>
   <param name="cidadeIdCidade" value="#{cidadeHome.cidadeIdCidade}"/>
   <param name="paisFrom"/>
   <param name="paisIdPais" value="#{paisHome.paisIdPais}"/>




   <navigation from-action="#{pacienteHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/protected/Paciente.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{pacienteHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/protected/Paciente.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{pacienteHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/protected/PacienteList.xhtml"/>
      </rule>
   </navigation>

</page>
